@model MobileViewModel
@{
    ViewData["Title"] = "Add New Mobile";
}

<div class="mt-2 text-center">
    <img src="~/images/NoPhoto/mobile.png" width="300" height="300" alt="Mobile" class=" img-thumbnail">
</div>

<div class="mt-3">
    <form method="post" enctype="multipart/form-data" asp-controller="Mobile" asp-action="Create">
        <div class="mb-3">
            <label asp-for="MobileName"></label>
            <input asp-for="MobileName" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label asp-for="MobileImage"></label>
            <input asp-for="MobileImage" class="form-control" />
        </div>
        
        <button type="submit" class="btn btn-outline-primary px-5">Create</button>
    </form>
</div>